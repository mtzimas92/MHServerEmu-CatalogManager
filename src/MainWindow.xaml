<Window x:Class="CatalogManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:CatalogManager"
        xmlns:converters="clr-namespace:CatalogManager.Converters"
        xmlns:loc="clr-namespace:CatalogManager.Converters"
        Title="{loc:Translate MainWindow.Title}" 
        Height="900" 
        Width="1400"
        MinWidth="1200"
        MinHeight="600"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>

        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:SkuVisibilityConverter x:Key="SkuVisibilityConverter"/>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="MinWidth" Value="120"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="MinWidth" Value="70"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Menu Bar -->
        <Menu Grid.Row="0" Background="White" BorderBrush="#DDDDDD" BorderThickness="0,0,0,1">
            <MenuItem Header="{loc:Translate MainWindow.Menu.File}">
                <MenuItem Header="{loc:Translate MainWindow.Menu.LoadCatalogFile}" Click="LoadCatalogFile_Click" FontWeight="Bold"/>
                <MenuItem Header="{loc:Translate MainWindow.Menu.ClearAllFiles}" Click="ClearAllFiles_Click"/>
                <Separator/>
                <MenuItem Header="{loc:Translate MainWindow.Menu.CurrentFiles}" IsEnabled="False">
                    <MenuItem.ToolTip>
                        <ToolTip>
                            <StackPanel>
                                <TextBlock FontWeight="Bold" Text="{loc:Translate MainWindow.Tooltip.LoadedFiles}" Margin="0,0,0,5"/>
                                <ItemsControl ItemsSource="{Binding CatalogService.LoadedFiles}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}" Margin="0,2,0,0"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                                <TextBlock Text="{loc:Translate MainWindow.Tooltip.NoFilesLoaded}" Visibility="{Binding CatalogService.LoadedFiles.Count, Converter={StaticResource BoolToVisibility}}"/>
                            </StackPanel>
                        </ToolTip>
                    </MenuItem.ToolTip>
                </MenuItem>
                <Separator/>
                <MenuItem Header="{loc:Translate MainWindow.Menu.Exit}" Click="Exit_Click"/>
            </MenuItem>
        </Menu>
        
        <!-- Main Content -->
        <DockPanel Grid.Row="1" Margin="20">
            <!-- Header -->
            <TextBlock DockPanel.Dock="Top" 
                      Text="{loc:Translate MainWindow.Title}" 
                      FontSize="24" 
                      FontWeight="Bold" 
                      Margin="0,0,0,20"
                      Foreground="#333333"/>

            <!-- Controls Panel -->
            <Grid DockPanel.Dock="Top" Margin="0,0,0,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- First Row -->
                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Category Filter -->
                    <ComboBox Grid.Column="0"
                            ItemsSource="{Binding Categories}"
                            SelectedItem="{Binding SelectedCategory, Mode=TwoWay}"
                            Margin="0,0,10,0"/>

                    <!-- Search -->
                    <TextBox Grid.Column="1"
                            Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                            Margin="0,0,10,0"/>

                    <!-- Price Range -->
                    <Grid Grid.Column="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Text="{loc:Translate MainWindow.Controls.PriceRange}" 
                                VerticalAlignment="Center" 
                                Margin="0,0,10,0"/>
                        <TextBox Grid.Column="1" 
                                Text="{Binding MinPrice, UpdateSourceTrigger=PropertyChanged}"/>
                        <TextBlock Grid.Column="2" 
                                Text="-" 
                                Margin="10,0" 
                                VerticalAlignment="Center"/>
                        <TextBox Grid.Column="3" 
                                Text="{Binding MaxPrice, UpdateSourceTrigger=PropertyChanged}"/>
                        <ComboBox Grid.Column="4"
                                Margin="10,0,0,0"
                                Width="120"
                                ItemsSource="{Binding PriceRanges}"
                                SelectedItem="{Binding SelectedPriceRange}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <CheckBox Grid.Column="5" 
                                Content="{loc:Translate MainWindow.Controls.EnableStockCatalogDeletion}" 
                                IsChecked="{Binding AllowCatalogModification}"
                                HorizontalAlignment="Left"
                                Margin="20,5,0,0">
                            <CheckBox.ToolTip>
                                <ToolTip Background="#FFF4F4" BorderBrush="Red">
                                    <TextBlock TextWrapping="Wrap" MaxWidth="300" Text="{loc:Translate MainWindow.Tooltip.DeletionWarning}"/>
                                </ToolTip>
                            </CheckBox.ToolTip>
                        </CheckBox>
                    </Grid>
                </Grid>

                <!-- Second Row - Action Buttons -->
                <UniformGrid Grid.Row="1" Rows="1" HorizontalAlignment="Left">
                    <Button Content="{loc:Translate MainWindow.Buttons.BatchModify}" 
                            Command="{Binding BatchModifyCommand}"
                            Margin="0,0,10,0"/>
                    <Button Content="{loc:Translate MainWindow.Buttons.CreateBundle}" 
                            Command="{Binding CreateBundleCommand}"
                            Margin="0,0,10,0"/>
                    <Button Content="{loc:Translate MainWindow.Buttons.BatchPriceUpdate}" 
                            Command="{Binding BatchPriceUpdateCommand}"
                            Margin="0,0,10,0"/>
                    <Button Content="{loc:Translate MainWindow.Buttons.BatchDelete}" 
                            Command="{Binding BatchDeleteCommand}"
                            Margin="0,0,10,0"/>
                    <Button Content="{loc:Translate MainWindow.Buttons.AddItem}" 
                            Command="{Binding AddItemCommand}"
                            Margin="0,0,10,0"/>
                    <Button Content="{loc:Translate MainWindow.Buttons.Refresh}" 
                            Command="{Binding RefreshCommand}"/>
                </UniformGrid>
            </Grid>


            <!-- Main DataGrid -->
            <DataGrid x:Name="ItemsDataGrid"
                    ItemsSource="{Binding FilteredItems}"
                    SelectedItem="{Binding SelectedItem}"
                    SelectionMode="Extended"
                    SelectionUnit="FullRow"
                    AutoGenerateColumns="False"
                    CanUserAddRows="False"
                    CanUserDeleteRows="False"
                    IsReadOnly="True"
                    VirtualizingPanel.IsVirtualizing="True"
                    VirtualizingPanel.VirtualizationMode="Recycling"
                    EnableRowVirtualization="True"
                    EnableColumnVirtualization="True"
                    Loaded="ItemsDataGrid_Loaded">
                <DataGrid.Resources>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#F5F5F5"/>
                        <Setter Property="Padding" Value="10,8"/>
                        <Setter Property="BorderBrush" Value="#DDDDDD"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridColumnHeader">
                                    <Grid>
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <ContentPresenter Margin="{TemplateBinding Padding}"/>
                                                <Path x:Name="SortArrow" 
                                                      Grid.Column="1"
                                                      Width="8" 
                                                      Height="10" 
                                                      Margin="5,0,5,0" 
                                                      Fill="#666666"
                                                      Stretch="Fill"
                                                      Data="M 0,0 L 1,0 L 0.5,1 Z"/>
                                            </Grid>
                                        </Border>
                                    </Grid>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="SortDirection" Value="{x:Null}">
                                            <Setter TargetName="SortArrow" Property="Opacity" Value="0.2"/>
                                        </Trigger>
                                        <Trigger Property="SortDirection" Value="Ascending">
                                            <Setter TargetName="SortArrow" Property="Opacity" Value="1"/>
                                            <Setter TargetName="SortArrow" Property="RenderTransform">
                                                <Setter.Value>
                                                    <RotateTransform Angle="180"/>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                        <Trigger Property="SortDirection" Value="Descending">
                                            <Setter TargetName="SortArrow" Property="Opacity" Value="1"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </DataGrid.Resources>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="{loc:Translate MainWindow.DataGrid.SkuId}" 
                                    Binding="{Binding SkuId}" 
                                    Width="120"
                                    SortMemberPath="SkuId"/>
                    <DataGridTextColumn Header="{loc:Translate MainWindow.DataGrid.DisplayName}" 
                                    Binding="{Binding LocalizedEntries[0].Title}" 
                                    Width="*"
                                    MinWidth="400"
                                    MaxWidth="600"
                                    SortMemberPath="LocalizedEntries[0].Title"/>
                    <DataGridTextColumn Header="{loc:Translate MainWindow.DataGrid.Type}" 
                                    Binding="{Binding Type.Name}" 
                                    Width="180"/>
                    <DataGridTextColumn Header="{loc:Translate MainWindow.DataGrid.Price}" 
                                    Binding="{Binding LocalizedEntries[0].ItemPrice}" 
                                    Width="120"/>
                    <DataGridTemplateColumn Header="{loc:Translate MainWindow.DataGrid.Actions}" Width="220">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="{loc:Translate Common.Edit}" 
                                            Command="{Binding DataContext.EditItemCommand,
                                                    RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"
                                            Margin="0,0,10,0"
                                            Background="#4CAF50"/>
                                    <Button Content="{loc:Translate Common.Delete}" 
                                            Command="{Binding DataContext.DeleteItemCommand,
                                                    RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"
                                            Background="#F44336">
                                        <Button.Visibility>
                                            <MultiBinding Converter="{StaticResource SkuVisibilityConverter}">
                                                <Binding Path="DataContext.AllowCatalogModification" 
                                                        RelativeSource="{RelativeSource AncestorType=Window}"/>
                                                <Binding Path="DataContext.CatalogService" 
                                                        RelativeSource="{RelativeSource AncestorType=Window}"/>
                                                <Binding Path="SkuId"/>
                                            </MultiBinding>
                                        </Button.Visibility>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                </DataGrid.Columns>
            </DataGrid>

            <!-- Loading Overlay -->
            <Grid Panel.ZIndex="1000" 
                  Background="#80000000" 
                  Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}}">
                <ProgressBar IsIndeterminate="True" 
                            Width="200" 
                            Height="4"
                            Background="Transparent"
                            Foreground="#2196F3"/>
            </Grid>
        </DockPanel>
        
        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Height="32" Background="#F5F5F5" Padding="5,0">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusText}" VerticalAlignment="Center"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <ProgressBar Width="100" Height="18" IsIndeterminate="True" 
                            Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}}"
                            VerticalAlignment="Center"
                            Margin="0,0,15,0"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,8,0">
                    <TextBlock Text="Language:" Margin="0,0,8,0" VerticalAlignment="Center"/>
                    <ComboBox x:Name="LanguageComboBox" 
                              Width="110" 
                              Height="22"
                              VerticalAlignment="Center"
                              SelectionChanged="LanguageComboBox_SelectionChanged">
                        <!-- Items populated dynamically from available language files -->
                    </ComboBox>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
