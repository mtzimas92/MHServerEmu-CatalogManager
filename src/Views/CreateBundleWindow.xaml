<Window
    x:Class="CatalogManager.Views.CreateBundleWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:CatalogManager.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CatalogManager.Views"
    xmlns:loc="clr-namespace:CatalogManager.Converters"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{Binding WindowTitle}"
    Width="800"
    Height="750"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">

    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility" />
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  Title  -->
        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="0,0,0,15"
            FontSize="20"
            FontWeight="Bold"
            Text="{Binding WindowTitle}" />

        <!--  Bundle Type Selection  -->
        <TextBlock
            Grid.Row="1"
            Grid.Column="0"
            Margin="0,0,10,10"
            VerticalAlignment="Center"
            Text="{loc:Translate CreateBundleWindow.Labels.OfferType}" />
        <StackPanel
            Grid.Row="1"
            Grid.Column="1"
            Margin="0,0,0,10"
            Orientation="Horizontal">
            <RadioButton
                Margin="0,0,20,0"
                Content="{loc:Translate CreateBundleWindow.Labels.Bundle}"
                IsChecked="{Binding IsBogo, Converter={StaticResource BoolToVisibility}, ConverterParameter=invert}" />
            <RadioButton Content="{loc:Translate CreateBundleWindow.Labels.BOGO}" IsChecked="{Binding IsBogo}" />
        </StackPanel>

        <!--  SKU ID  -->
        <TextBlock
            Grid.Row="2"
            Grid.Column="0"
            Margin="0,0,10,10"
            VerticalAlignment="Center"
            Text="{loc:Translate CreateBundleWindow.Labels.SKU}" />
        <TextBox
            Grid.Row="2"
            Grid.Column="1"
            Margin="0,0,0,10"
            Text="{Binding SkuId}" />

        <!--  Title  -->
        <TextBlock
            Grid.Row="3"
            Grid.Column="0"
            Margin="0,0,10,10"
            VerticalAlignment="Center"
            Text="{loc:Translate CreateBundleWindow.Labels.Title}" />
        <TextBox
            Grid.Row="3"
            Grid.Column="1"
            Margin="0,0,0,10"
            Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" />

        <!--  Description  -->
        <TextBlock
            Grid.Row="4"
            Grid.Column="0"
            Margin="0,5,10,10"
            VerticalAlignment="Top"
            Text="{loc:Translate CreateBundleWindow.Labels.Description}" />
        <TextBox
            Grid.Row="4"
            Grid.Column="1"
            Height="60"
            Margin="0,0,0,10"
            AcceptsReturn="True"
            Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
            TextWrapping="Wrap"
            VerticalScrollBarVisibility="Auto" />

        <!--  Price  -->
        <TextBlock
            Grid.Row="5"
            Grid.Column="0"
            Margin="0,0,10,10"
            VerticalAlignment="Center"
            Text="{loc:Translate CreateBundleWindow.Labels.Price}" />
        <TextBox
            Grid.Row="5"
            Grid.Column="1"
            Margin="0,0,0,10"
            Text="{Binding Price}" />

        <!--  Item Type  -->
        <TextBlock
            Grid.Row="6"
            Grid.Column="0"
            Margin="0,0,10,10"
            VerticalAlignment="Center"
            Text="{loc:Translate CreateBundleWindow.Labels.ItemType}" />
        <ComboBox
            Grid.Row="6"
            Grid.Column="1"
            Margin="0,0,0,10"
            ItemsSource="{Binding ItemTypes}"
            SelectedItem="{Binding SelectedType}" />

        <!--  URL Configuration Section  -->
        <!--  Bundle Items and Type Modifiers  -->
        <Grid
            Grid.Row="7"
            Grid.Column="0"
            Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Bundle Items  -->
            <Grid
                Grid.Row="0"
                Grid.RowSpan="2"
                Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Margin="0,0,0,5"
                    FontWeight="Bold"
                    Text="{loc:Translate CreateBundleWindow.Labels.BundleItems}" />

                <!--  Bundle Items  -->
                <ListBox
                    Grid.Row="1"
                    Height="150"
                    Margin="0,0,10,5"
                    ItemsSource="{Binding BundleItems}"
                    SelectedItem="{Binding SelectedBundleItem}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Width="200" Text="{Binding Item.DisplayName}" />
                                <TextBlock Margin="10,0" Text="{loc:Translate CreateBundleWindow.Labels.Quantity}" />
                                <TextBox
                                    Width="50"
                                    Margin="5,0"
                                    Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <StackPanel
                    Grid.Row="2"
                    Margin="0,0,10,15"
                    Orientation="Horizontal">
                    <Button
                        Width="100"
                        Margin="0,0,10,0"
                        Command="{Binding AddItemCommand}"
                        Content="{loc:Translate CreateBundleWindow.Buttons.AddItem}" />
                    <Button
                        Width="100"
                        Command="{Binding RemoveItemCommand}"
                        Content="{loc:Translate CreateBundleWindow.Buttons.RemoveItem}" />
                </StackPanel>

                <!--  Bonus Items (BOGO only)  -->
                <TextBlock
                    Grid.Row="3"
                    Margin="0,0,0,5"
                    FontWeight="Bold"
                    Text="{loc:Translate CreateBundleWindow.Labels.BonusItems}"
                    Visibility="{Binding IsBogo, Converter={StaticResource BoolToVisibility}}" />

                <ListBox
                    Grid.Row="4"
                    Margin="0,0,10,0"
                    ItemsSource="{Binding BonusItems}"
                    SelectedItem="{Binding SelectedBonusItem}"
                    Visibility="{Binding IsBogo, Converter={StaticResource BoolToVisibility}}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Width="200" Text="{Binding Item.DisplayName}" />
                                <TextBlock Margin="10,0" Text="{loc:Translate CreateBundleWindow.Labels.Quantity}" />
                                <TextBox
                                    Width="50"
                                    Margin="5,0"
                                    Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <StackPanel
                    Grid.Row="4"
                    Margin="0,0,10,0"
                    VerticalAlignment="Bottom"
                    Orientation="Horizontal"
                    Visibility="{Binding IsBogo, Converter={StaticResource BoolToVisibility}}">
                    <Button
                        Width="100"
                        Margin="0,0,10,0"
                        Command="{Binding AddBonusItemCommand}"
                        Content="{loc:Translate CreateBundleWindow.Buttons.AddBonus}" />
                    <Button
                        Width="100"
                        Command="{Binding RemoveBonusItemCommand}"
                        Content="{loc:Translate CreateBundleWindow.Buttons.RemoveBonus}" />
                </StackPanel>
            </Grid>

            <!--  Type Modifiers  -->
            <TextBlock
                Grid.Row="0"
                Grid.Column="1"
                Margin="0,0,0,5"
                FontWeight="Bold"
                Text="{loc:Translate CreateBundleWindow.Labels.TypeModifiers}" />

            <ListBox
                x:Name="TypeModifiersListBox"
                Grid.Row="1"
                Grid.Column="1"
                ItemsSource="{Binding AvailableTypeModifiers}"
                SelectionChanged="TypeModifiersListBox_SelectionChanged"
                SelectionMode="Multiple">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <CheckBox Content="{Binding}" IsChecked="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListBoxItem}}, Path=IsSelected}" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>

        <!--  Status Message  -->
        <TextBlock
            Grid.Row="8"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="0,10,0,10"
            Foreground="DarkBlue"
            Text="{Binding StatusMessage}"
            TextWrapping="Wrap" />

        <!--  Buttons  -->
        <StackPanel
            Grid.Row="8"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="0,10,0,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Orientation="Horizontal">
            <Button
                Width="100"
                Margin="0,0,10,0"
                Command="{Binding SaveCommand}"
                Content="{loc:Translate Common.Save}" />
            <Button
                Width="100"
                Command="{Binding CancelCommand}"
                Content="{loc:Translate Common.Cancel}" />
        </StackPanel>

        <!--  Loading Indicator  -->
        <Grid
            Grid.Row="0"
            Grid.RowSpan="11"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Background="#80000000"
            Visibility="{Binding IsSaving, Converter={StaticResource BoolToVisibility}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock
                    Margin="0,0,0,10"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="{loc:Translate CreateBundleWindow.Status.Saving}" />
                <ProgressBar
                    Width="200"
                    Height="5"
                    IsIndeterminate="True" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>