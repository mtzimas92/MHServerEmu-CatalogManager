<Window x:Class="CatalogManager.Views.BatchDeleteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:loc="clr-namespace:CatalogManager.Converters"
        Title="{loc:Translate BatchDeleteWindow.Title}" 
        Height="200" 
        Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding DeleteMessage}" 
                   TextWrapping="Wrap"
                   Margin="0,0,0,20"/>

        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="{loc:Translate Common.Delete}" 
                    Click="DeleteButton_Click"
                    Width="80" 
                    Margin="0,0,10,0"/>
            <Button Content="{loc:Translate Common.Cancel}" 
                    Click="CancelButton_Click"
                    Width="80"/>
        </StackPanel>
    </Grid>
</Window>
